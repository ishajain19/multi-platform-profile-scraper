{
  "manifest_version": 3,
  "name": "Profile HTML Sender",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*", "*://*.instagram.com/*"],
      "js": ["popup.js"]
    }
  ]
}
